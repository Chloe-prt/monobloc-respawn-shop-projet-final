<header>
    <div class="header-style">
        <div {% if isConnected %} class="hidden" {% elseif formstyle %} class="hidden" {% elseif isConv %} class="hidden" {% endif %} class="logo-container">
            <img src="/assets/images/logo-respawn-shop-blanc.png" alt="logo respawn shop">
        </div>
        {% if isConnected %}
            <div class="header-connect">
                <div class="logo-container-connected">
                    <img src="/assets/images/logo-respawn-shop-blanc.png" alt="logo respawn shop">
                </div>
                <div class="search-bar">
                    <form action="/search" method="get">
                        <input type="text" name="search" id="search-input" placeholder="Recherche" required>
                        <button type="submit" id="search-button">
                            <img src="/assets/images/search-loupe-rs.png" alt="logo loupe">
                        </button>
                    </form>
                </div>
                <div class="link-profil">
                    <a href="/myprofil">
                        <img src="/assets/images/uploads/{{user.photo ? user.photo : 'face-perso-rs-png'}}" alt="image lien vers profil">
                    </a>
                </div>
            </div>
        {% elseif formstyle %}
            <div class="form-header">
                <div class="logo-container-form">
                    <img src="/assets/images/logo-respawn-shop-blanc.png" alt="logo respawn shop">
                </div>
                <div class="cross-close">
                    <a href="{{ returnTo }}">
                        <img src="/assets/images/close-rs.png" alt="">
                    </a>
                </div>
            </div>
        {% elseif isConv and otherUser %}
            <div class="conv-header">
                <div class="lead">
                    <div class="return-profil">
                        <a href="" class="arrow-back">
                            <img src="/assets/images/arrow-back-rs.png" alt="">
                        </a>
                        <div class="profil-container">
                            <a href="" class="photo-profil">
                                <img src="/assets/images/uploads/{{ otherUser.photo ? otherUser.photo : "default-avatar.jpg" }}" alt="photo de profil">
                            </a>
                            <div>
                                <h3>{{ otherUser.pseudo }}</h3>
                                <p>{{ otherUser.firstname }} {{ otherUser.lastname }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="points">
                        <img src="/assets/images/3point-rs.png" alt="option de discussion">
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</header>